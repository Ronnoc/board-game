{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["dom"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "outDir": "dist",
    "strict": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "types": ["node", "mocha", "chai"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "files": ["src/server.ts", "src/components/App.ts"]
}
